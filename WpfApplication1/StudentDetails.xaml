<UserControl x:Class="WpfApplication1.StudentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApplication1"
             xmlns:conv="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             
             FontFamily="Microsoft YaHei UI"
             d:DesignHeight="435" d:DesignWidth="1000">
    <UserControl.Resources>
        <conv:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel
                VerticalAlignment="Center"
                Margin="25,0">
                
                <TextBlock x:Name="tbName" 
                        Text="Name"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"
                        Margin="0,0,0,30"/>
                <StackPanel Orientation="Horizontal"
                            >
                    <TextBlock
                        Text="Grade: "
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"/>
                    <TextBlock x:Name="tbExam"
                        Text=""
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"
                        Visibility="Collapsed"/>
                </StackPanel>
                <CheckBox
                    x:Name="cbShowGrade"
                    Content="Show"
                    IsChecked="False"
                    Style="{StaticResource MaterialDesignLightCheckBox}" 
                    Margin="0,5,0,25"
                    Checked="ShowGrade_Checked"
                    Unchecked="ShowGrade_Unchecked"/>
                <StackPanel HorizontalAlignment="Left"
                    Margin="0,0,0,30">
                    <TextBlock
                        Text="Exam"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                        TextWrapping="Wrap"/>
                    <TextBox
                        x:Name="txtExam"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Score"
                        AcceptsReturn="True"                 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        TextWrapping="Wrap"
                        Width="70"
                        PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                        MaxLength="2"
                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                        TextChanged="ExamTextChanged"/>
                </StackPanel>
                <DockPanel
                    LastChildFill="False"
                    >
                    <Button x:Name="btnSaveExam" 
                        Content="Save"
                        IsEnabled="False"
                        Width="85"
                        Click="SaveExam_Click"
                        DockPanel.Dock="Left"/>

                    <Button x:Name="btnDeleteStudent" 
                        Content="Delete"
                        Width="85"
                        Click="DeleteStudent_Click"
                        Background="#BA1A1A"
                        BorderBrush="#BA1A1A"
                        ToolTip="Delete Student" 
                        DockPanel.Dock="Right"/>
                </DockPanel>
            </StackPanel>

        </Grid>
        
        <Grid Margin="10" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3.5*" />
                </Grid.ColumnDefinitions>
                <DockPanel
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    LastChildFill="False"
                    Margin="0,0,0,10">
                    <TextBlock 
                        Text="Written Works" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Padding="0,16"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"
                        Margin="0,10,0,0"
                        DockPanel.Dock="Top"/>
                    <Button
                        x:Name="btnSaveWrittenWorks"
                        Content="Save"
                        DockPanel.Dock="Bottom"
                        Width="85"
                        IsEnabled="False"
                        Click="SaveWrittenWorks_Click"/>
            </DockPanel>
                <ItemsControl
                    Grid.Column="1"
                    AlternationCount="1000"
                    ItemsSource="{Binding WrittenWorks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="2" Columns="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray"
                                    BorderThickness="1,0,1,1">
                                <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="2">
                                    <StackPanel.Visibility>
                                        <MultiBinding Converter="{StaticResource EmptyToVisibilityConverter}">
                                            <Binding Path="Value"/>
                                            <Binding Path="Label"/>
                                        </MultiBinding>
                                    </StackPanel.Visibility>
                                    <TextBox 
                                    Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                        Path=(ItemsControl.AlternationIndex)}"
                                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Score"
                                    AcceptsReturn="True"                 
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    TextWrapping="Wrap"
                                    Width="45"
                                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                    MaxLength="2"
                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                    TextChanged="WrittenScoresTextChanged"/>
                                    <TextBlock 
                                    Text="{Binding Label, StringFormat={}/ {0}}"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                                    TextWrapping="Wrap"
                                    FontWeight="SemiBold"
                                    Margin="1,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
        </Grid>

        <!-- Second row -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3.5*" />
                </Grid.ColumnDefinitions>

                
                <DockPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    LastChildFill="False">
                    <TextBlock 
                        Text="Performance Task" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Padding="0,16"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"
                        Margin="0,10,0,0"
                        DockPanel.Dock="Top"/>
                    <Button
                        x:Name="btnSavePerformanceTasks"
                        Content="Save"
                        DockPanel.Dock="Bottom"
                        Width="85"
                        IsEnabled="False"
                        Click="SavePerformanceTasks_Click"/>
                </DockPanel>
                <ItemsControl
                    Grid.Column="1"
                    AlternationCount="1000"
                    ItemsSource="{Binding PerformanceTasks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="2" Columns="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray"
                                BorderThickness="1,0,1,1">
                                <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="2">
                                    <StackPanel.Visibility>
                                        <MultiBinding Converter="{StaticResource EmptyToVisibilityConverter}">
                                            <Binding Path="Value"/>
                                            <Binding Path="Label"/>
                                        </MultiBinding>
                                    </StackPanel.Visibility>
                                    <TextBox 
                                    Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                        Path=(ItemsControl.AlternationIndex)}"
                                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Score"
                                    AcceptsReturn="True"                 
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    TextWrapping="Wrap"
                                    Width="45"
                                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                    MaxLength="2"
                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                    TextChanged="PerformanceScoresTextChanged"/>
                                    <TextBlock 
                                    Text="{Binding Label, StringFormat={}/ {0}}"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                                    TextWrapping="Wrap"
                                    FontWeight="SemiBold"
                                    Margin="1,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
